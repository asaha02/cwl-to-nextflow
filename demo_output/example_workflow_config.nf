// HealthOmics configuration
healthomics {
    enabled = true
    region = 'us-east-1'
    batch {
        maxParallelTransfers = 3
        maxTransferAttempts = 1
        delayBetweenAttempts = '30 sec'
    }
}

// Process configuration
