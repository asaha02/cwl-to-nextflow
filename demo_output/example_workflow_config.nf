    healthomics {
        process.executor = 'awsbatch'
        process.queue = 'healthomics-queue'
        aws.region = 'us-east-1'
    }
    
    healthomics-dev {
        process.executor = 'awsbatch'
        process.queue = 'healthomics-dev-queue'
        aws.region = 'us-east-1'
    }
    
    healthomics-prod {
        process.executor = 'awsbatch'
        process.queue = 'healthomics-prod-queue'
        aws.region = 'us-east-1'
    }
}

